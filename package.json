{
  "name": "react-highlight-string",
  "private": false,
  "module": "./dist/react-highlight-string.es.js",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-highlight-string.es.js",
      "require": "./dist/react-highlight-string.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/react-highlight-string.umd.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install",
    "prepublishOnly": "yarn test && yarn lint && rm -rf dist && yarn build",
    "preview": "vite preview",
    "semantic-release": "semantic-release",
    "test": "vitest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn  eslint",
      "yarn  format"
    ]
  },
  "dependencies": {
    "highlight-string": "1.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "happy-dom": "^8.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "pretty": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-dts": "^2.1.0",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.29.3"
  },
  "peerDependencies": {
    "react": "16.8.0 || >=17.x",
    "react-dom": "16.8.0 || >=17.x"
  }
}
